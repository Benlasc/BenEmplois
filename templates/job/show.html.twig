{% extends 'base.html.twig' %}

{% block title %}Job{% endblock %}

{% block body %}
    <h1>Job</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ job.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ job.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ job.description }}</td>
            </tr>
            <tr>
                <th>ContractType</th>
                <td>{{ job.contractType }}</td>
            </tr>
            <tr>
                <th>ContractNature</th>
                <td>{{ job.contractNature }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ job.City }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ job.company }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ job.url }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ job.creationDate ? job.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdateDate</th>
                <td>{{ job.updateDate ? job.updateDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('job_index') }}">back to list</a>

{% endblock %}
